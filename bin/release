#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

cat <<EOF
---
config_vars:
  JAVA_HOME: vendor/jdk1.7.0_06
  PATH: vendor/jdk1.7.0_05/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_OPTS: -server -Xms384m -Xmx384m -Xss512k -XX:+UseCompressedOops
addons:
  heroku-postgresql:dev

default_process_types:
  web:      java \$JAVA_OPTS -jar server/jetty-runner.jar --port \$PORT target/*.war

EOF
